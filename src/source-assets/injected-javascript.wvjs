 */
async function lookUpTerm({
  dictionaryForm,
  boundingClientRect,
  clientRect = boundingClientRect,
  writingMode,
}) {
  const id = __paranovelState.tokenizationPromiseCount++;

  /** @type {string} */
  let response;
  try {
    response = await new Promise((resolve, reject) => {
